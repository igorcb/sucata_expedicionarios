<h1>Listing products</h1>

<%= link_to 'New Product', new_admin_product_path, class: "btn btn-primary btn-large btn-block" %>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Mark</th>
      <th>Category</th>
      <th>Name</th>
      <th>Side</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.mark.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.name %></td>
        <td><%= product.side %></td>
        <td><%= link_to 'Show', [:admin, product] %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Destroy', [:admin, product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


