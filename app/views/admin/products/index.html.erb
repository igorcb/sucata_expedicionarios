<h1>Listagem de Produtos</h1>

<%= link_to 'Novo Produto', new_admin_product_path, class: "btn btn-primary btn-large btn-block" %>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Marca</th>
      <th>Categoria</th>
      <th>Nome</th>
      <th>Lado</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.mark.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.name %></td>
        <td><%= product.side_string %></td>
        <td><%= link_to 'Exibir', [:admin, product] %></td>
        <td><%= link_to 'Editar', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Deletar', [:admin, product], method: :delete, data: { confirm: 'Deseja deletar o registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


