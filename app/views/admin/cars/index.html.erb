<h1>Listing cars</h1>

<%= link_to 'New Product', new_admin_car_path, class: "btn btn-primary btn-large btn-block" %>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Mark</th>
      <th>Name</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.mark.name %></td>
        <td><%= car.name %></td>
        <td><%= link_to 'Show', [:admin, car] %></td>
        <td><%= link_to 'Edit', edit_admin_car_path(car) %></td>
        <td><%= link_to 'Destroy', [:admin, car], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


