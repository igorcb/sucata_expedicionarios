<p>
  <strong>Marca:</strong>
  <%= @car.mark.name %>
</p>

<p>
  <strong>Nome:</strong>
  <%= @car.name %>
</p>

<div id="gallery" data-toggle="modal-gallery" data-target="#modal-gallery">
  <% @car.assets.each do |asset| %>
    <%= link_to image_tag(asset.asset.url(:thumb)), data: {:toggle=>"modal", :gallery => "gallery"} if asset.present? %>
  <% end %>
</div>

<div class="form-actions">
  <%= link_to "Novo", new_admin_car_path, class: 'btn btn-primary'  %>
  <%= link_to 'Editar', edit_admin_car_path(@car), class: 'btn'  %> 
  <%= link_to 'Voltar', admin_cars_path, class: 'btn'  %>
</div>

<div class="input-block-level">
  <%= link_to "Estou interessado", new_contact_path(car: @car), class: 'btn btn-success' %>
</div>
