<p>
  <strong>Mark:</strong>
  <%= @car.mark.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @car.name %>
</p>

<div id="well">
  <div id="myCarousel" class="carousel slide">

  <!-- Carousel items -->
  <div class="carousel-inner">

      <div class="item active">
          <div class="row-fluid">
            <div class="span3">
              <!-- <a href="ligue-1212x180-cinza" class="thumbnail"><img src="<%#= asset_path( 'ligue-1212x180-cinza.jpg' ) %>" alt="Oil Barrons" style="max-width:100%;" /></a></div> -->
              <%#= image_tag asset.asset.url(:thumb) %>
              <%= image_tag @car.assets.first.asset.url(:original) if @car.assets.present? %> 
            </div>
          </div>
      </div>

  <% @car.assets.each do |asset|  %>
      <div class="item">
          <div class="row-fluid">
            <div class="span3">
              <!-- <a href="ligue-1212x180-cinza" class="thumbnail"><img src="<%#= asset_path( 'ligue-1212x180-cinza.jpg' ) %>" alt="Oil Barrons" style="max-width:100%;" /></a></div> -->
              <%= image_tag asset.asset.url(:original), alt: "Oil Barrons", style:"max-width:100%; vertical-align: middle;" %>
              <%#= image_tag @car.assets.first.asset.url(:medium) if @car.assets.present? %> 
            </div>
          </div>
      </div>
    <% end  %>

  </div><!--/carousel-inner-->

  <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
</div><!--/myCarousel-->

</div><!--/well-->


<div class="form-actions">
  <%= link_to "New", new_admin_car_path, class: 'btn btn-primary'  %>
  <%= link_to 'Edit', edit_admin_car_path(@car), class: 'btn'  %> 
  <%= link_to 'Back', admin_cars_path, class: 'btn'  %>
</div>


<div class="input-block-level">
  <%= link_to "Estou interessado", new_contact_path(car: @car), class: 'btn btn-success' %>
</div>
