<h1>Listing marks</h1>

<%= link_to 'New Mark', new_admin_mark_path, class: "btn btn-primary btn-large btn-block" %>

<br />

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marks.each do |mark| %>
      <tr>
        <td><%= image_tag (mark.assets.first.asset.url(:thumb)), class: "img-thumbnail" %></td>
        <td><%= link_to 'Show', [:admin, mark] %></td>
        <td><%= link_to 'Edit', edit_admin_mark_path(mark) %></td>
        <td><%= link_to 'Destroy', [:admin, mark], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

