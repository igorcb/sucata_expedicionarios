
<p>
  <strong>Marca:</strong>
  <%= @mark.name %>
  <br />
  <%= image_tag @mark.assets.first.asset.url(:medium) if @mark.assets.present? %> 
</p>


<div class="form-actions">
  <%= link_to 'Novo', new_admin_mark_path, :class => 'btn btn-primary' %>
  <%= link_to 'Editar', edit_admin_mark_path(@mark), :class => 'btn' %>
  <%= link_to 'Voltar', admin_marks_path, :class => 'btn' %>
</div>

<hr>

<h3>Produtos</h3>

<div id="gallery" data-toggle="modal-gallery" data-target="#modal-gallery">
  <% @mark.products.each do |product| %>
    <%= link_to image_tag(product.assets.first.asset.url(:thumb)), product_path(product), data: {:toggle=>"modal", :gallery => "gallery"} if product.assets.present? %>
  <% end %>
</div>