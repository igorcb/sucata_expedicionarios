<%= form_for [:admin, @mark], :html => { multipart: true, class: "form-horizontal" } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <fieldset>

    <legend></legend> 

    <div class="control-group">
      <%= f.label :name, "Nome", class: 'control-label'  %>
      <div class="controls">
        <%= f.text_field :name, class: 'control-label'  %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :image, "Imagem", class: 'control-label' %>
      <div class="controls">
        <%= f.fields_for :assets do |asset_field| %>
          <%= asset_field.file_field :asset %>
        <% end %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Salvar', class: 'btn btn-primary' %>
      <%= link_to 'Cancelar', admin_marks_path, class: 'btn' %>
    </div>

  </fieldset>

<% end %>