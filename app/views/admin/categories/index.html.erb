<h1>Listagem de categorias</h1>

<%= link_to 'Nova categoria', new_admin_category_path, class: "btn btn-primary btn-large btn-block" %>

<br />

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Exibir', [:admin, category] %></td>
        <td><%= link_to 'Editar', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Deletar', [:admin, category], method: :delete, data: { confirm: 'Deseja deletar o registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
