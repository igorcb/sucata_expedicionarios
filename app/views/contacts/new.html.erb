<%= form_for @contact, :html => {class: "form-horizontal" }  do |f| %>
  <%= render 'shared/error_messages' %>
  
  <fieldset>
    
    <legend></legend>

    <div class="form-group">
      <%= f.label :name, "Name", class: 'control-label'  %>
      <div class="controls">
        <%= f.text_field :name, class: 'text_field'  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email", class: 'control-label'  %>
      <div class="controls">
        <%= f.text_field :email, class: 'text_field'   %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone, "Phone", class: 'control-label'  %>
      <div class="controls">
        <%= f.text_field :phone, class: 'text_field'  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :subject, "Subject", class: 'control-label'  %>
      <div class="controls">
        <%= f.text_field :subject, value: @product_mark_category, class: 'text_field'  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :message, "Message", class: 'control-label'  %>
      <div class="controls">
        <%= f.text_area :message, value: @product_name, class: 'text_field'  %>
      </div>
    </div>

    <br>
    <div class="form-actions">
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', products_path, :class => 'btn' %>
    </div>

  </fieldset>

<% end %>
